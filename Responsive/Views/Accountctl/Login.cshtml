@model Login
@if(TempData["Error"] != null)
{
    <div class="col-12 alert alert-danger">
        <span><b> Sorry!</b> - @TempData["Error"]</span>
    </div>
}
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<head>
    <link href='https://fonts.googleapis.com/css?family=Prompt' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/Tew.css">
</head>
    <div class="center-container">
        <div class="white-boxs">
                <div class="row">
                    <div>
                        <br />
                        <br />
                        <p class="tewf text-center">ล็อกอินเข้าสู่ระบบ</p>
                    </div>
                    <hr class="hr" />
                    <form asp-action="Login" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Email"> </label>
                            <input asp-for="Email" class="form-control taller-input" type="email" placeholder="ชื่อผู้ใช้หรืออีเมล.." aria-label="รหัสผ่าน" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <br />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"> </label>
                            <input asp-for="Password" class="form-control taller-input" type="password" placeholder="รหัสผ่าน" aria-label="รหัสผ่าน" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <br />
                        </div>


                        <center>
                            <button type="submit" class="btn btn-success rounded-pill" style="width: 30%;">เข้าสู่ระบบ</button>
                        </center>

                        <br />
                        <br />
                        <br />

                        <div class="form-group center-content">
                            <span class="underline">หากยังไม่ได้สมัครสมาชิก โปรด</span>
                            <a asp-action="Register" class="btn btn-success rounded-pill" style="margin-left: 10px; " width: 42%;">ลงทะเบียน</a>
                        </div>
                    </form>
                </div>
        </div>
    </div>
@{
    if (ViewBag.Message != null)
    {
        <div class="text-danger"> @ViewBag.Message </div>
    }
}